# Bot Token from @BotFather
BOT_TOKEN=your_bot_token_here

# Groq API Key (optional, for AI text generation)
GROQ_API_KEY=your_groq_api_key_here

# Max concurrent ffmpeg processes before rejecting heavy requests (optional)
MAX_CONCURRENT_PROCESSES=2

# Rating DB path (optional)
RATING_DB_PATH=ratings.sqlite3

# /plus cooldown in seconds (optional, default 12h)
VOTE_COOLDOWN_SECONDS=43200

# Activity-based rating: award points for regular chat messages (optional)
# 0 disables this feature.
ACTIVITY_POINTS_PER_AWARD=0
# Cooldown per user per chat (seconds)
ACTIVITY_COOLDOWN_SECONDS=900
# Minimum characters for text messages to count (media without caption counts anyway)
ACTIVITY_MIN_CHARS=5
